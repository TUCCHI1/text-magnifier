{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript"],
  "env": {
    "browser": true
  },
  "globals": {
    "chrome": "readonly"
  },
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "perf": "warn"
  },
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-ternary": "error"
  },
  "overrides": [
    {
      "files": ["tests/**/*.ts"],
      "rules": {
        "no-empty-pattern": "off"
      }
    }
  ],
  "ignorePatterns": ["dist/", "node_modules/"]
}
