{
  "name": "reading-spotlight-vscode",
  "displayName": "Reading Spotlight",
  "description": "Focus on text with a customizable spotlight overlay - helps with reading and concentration",
  "version": "0.1.0",
  "publisher": "TUCCHI1",
  "repository": {
    "type": "git",
    "url": "https://github.com/TUCCHI1/text-magnifier"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Themes"
  ],
  "keywords": [
    "reading",
    "focus",
    "spotlight",
    "accessibility",
    "concentration"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "readingSpotlight.toggle",
        "title": "Reading Spotlight: Toggle"
      }
    ],
    "configuration": {
      "title": "Reading Spotlight",
      "properties": {
        "readingSpotlight.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the reading spotlight"
        },
        "readingSpotlight.lineCount": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "maximum": 10,
          "description": "Number of lines to highlight"
        },
        "readingSpotlight.color": {
          "type": "string",
          "default": "yellow",
          "enum": [
            "yellow",
            "blue",
            "green",
            "peach",
            "gray",
            "aqua"
          ],
          "description": "Spotlight highlight color"
        },
        "readingSpotlight.customColor": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Custom hex color (e.g., #ff0000). Overrides color setting when set."
        },
        "readingSpotlight.dimOpacity": {
          "type": "number",
          "default": 0.25,
          "minimum": 0.1,
          "maximum": 0.5,
          "description": "Opacity of dimmed lines (0.1 = light, 0.5 = dark)"
        }
      }
    },
    "keybindings": [
      {
        "command": "readingSpotlight.toggle",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      }
    ]
  },
  "scripts": {
    "compile": "esbuild src/extension.ts --outfile=dist/extension.js --bundle --minify --platform=node --external:vscode --format=cjs",
    "compile:test": "tsc -p tsconfig.test.json",
    "watch": "esbuild src/extension.ts --outfile=dist/extension.js --bundle --platform=node --external:vscode --format=cjs --watch",
    "build": "pnpm run compile",
    "pretest": "pnpm run compile && pnpm run compile:test",
    "test": "vscode-test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "package": "vsce package --no-dependencies",
    "clean": "rm -rf dist out"
  },
  "dependencies": {
    "@reading-spotlight/shared": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.1.0",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
