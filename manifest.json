{
  "manifest_version": 3,
  "name": "Text Magnifier",
  "version": "1.0.0",
  "description": "Hover over text to magnify words with smooth animation",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
