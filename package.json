{
  "name": "reading-spotlight-monorepo",
  "version": "0.0.0",
  "description": "Reading Spotlight - Multi-platform focus aid extensions",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "dev": "turbo run dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "bun run typecheck && bun run lint && bun run format:check",
    "prepare": "husky"
  },
  "keywords": [
    "chrome-extension",
    "vscode-extension",
    "accessibility",
    "reading-aid",
    "focus",
    "monorepo"
  ],
  "author": "TUCCHI1 <tutikikin1@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TUCCHI1/text-magnifier.git"
  },
  "homepage": "https://github.com/TUCCHI1/text-magnifier#readme",
  "bugs": {
    "url": "https://github.com/TUCCHI1/text-magnifier/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.8.1",
    "turbo": "^2.7.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,html,css}": [
      "prettier --write"
    ]
  }
}
